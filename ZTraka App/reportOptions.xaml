<Window x:Class="ZTraka_App.reportOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Report Options" Height="251" Width="589" Name="rptOpt" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Icon= ".\IconImages\reportSetting.png" Loaded="rptOpt_Loaded">
    <Grid>
        <GroupBox Header="Report Options" Margin="12,12,25,51" Name="groupBoxReportOptions">
            <Grid>
                <RadioButton Height="16" HorizontalAlignment="Left" Margin="15,6,0,0" Name="radioButtonUserGenerated" VerticalAlignment="Top" Width="155" IsChecked="False">User Generated Reports</RadioButton>
                <RadioButton Height="16" HorizontalAlignment="Left" Margin="15,28,0,0" Name="radioButtonAutogenerated" VerticalAlignment="Top" Width="210">Auto Generated Reports</RadioButton>
                <CheckBox Margin="15,0,383,47.6" Name="checkBoxAssetReports" IsChecked="True" IsEnabled="False" Height="20.44" VerticalAlignment="Bottom">Asset Reports</CheckBox>
                <CheckBox Height="19.6" Margin="15,0,383,26.4" Name="checkBoxUserReports" VerticalAlignment="Bottom" IsChecked="True" IsEnabled="False">User Reports</CheckBox>
                <CheckBox Height="18" Margin="15,0,340,6" Name="checkBoxMapReaderInfoReports" VerticalAlignment="Bottom" IsChecked="True" IsEnabled="False">Map Reader Info reports</CheckBox>
            </Grid>
        </GroupBox>
        <Button Height="23" HorizontalAlignment="Left" Margin="176,0,0,9" Name="btnApply" VerticalAlignment="Bottom" Width="75" Click="btnApply_Click">Apply</Button>
        <Button Height="23" Margin="0,0,224,9" Name="btnCancel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnCancel_Click">Cancel</Button>
    </Grid>
</Window>
